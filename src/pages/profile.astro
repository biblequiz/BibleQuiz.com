---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import type { StarlightPageFrontmatter } from "@astrojs/starlight/types";
import ProfilePage from "../components/ProfilePage";
import LoadingPlaceholder from "../components/LoadingPlaceholder";

const frontmatter: StarlightPageFrontmatter = {
    title: "My Profile",
};

const loadingPlaceholderId = "profile-fallback";
---

<StarlightPage frontmatter={frontmatter}>
    <LoadingPlaceholder
        id={loadingPlaceholderId}
        spinnerSize="xl"
        text="Loading the Profile Page ..."
    />
    <ProfilePage client:only="react" loadingElementId={loadingPlaceholderId} />
</StarlightPage>
