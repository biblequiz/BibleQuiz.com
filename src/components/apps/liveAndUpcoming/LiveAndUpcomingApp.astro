---
import LiveAndUpcomingRoot from "./LiveAndUpcomingRoot";
---

<div id="generator-fallback" class="flex justify-center items-center">
    <span class="loading loading-spinner loading-xl"></span>&nbsp; Loading the Live and Upcoming Events ...
</div>
<LiveAndUpcomingRoot
    client:only="react"
    loadingElementId="generator-fallback"
/>

<style>
    .card {
        border: 1px solid var(--sl-color-gray-5);
        border-radius: 0.5rem;
        box-shadow: var(--sl-shadow-sm);
        position: relative;
    }

    a {
        text-decoration: none;
        line-height: var(--sl-line-height-headings);
    }

    /* a11y fix for https://github.com/withastro/starlight/issues/487 */
    a::before {
        content: "";
        position: absolute;
        inset: 0;
    }

    /* Hover state */
    .card:hover {
        background: var(--sl-color-gray-7, var(--sl-color-gray-6));
        border-color: var(--sl-color-gray-2);
    }

    .card:hover .icon {
        color: var(--sl-color-white);
    }
</style>
